{
  "name": "stylesync",
  "description": "Style Sync",
  "version": "0.0.0",
  "author": "Osvaldo Costa",
  "email": "osvaldo.costajr@gmail.com",
  "license": "UNLICENSED",
  "scripts": {
    "install:all": "npm-run-all install:client install:server",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "start:dev": "npm-run-all --parallel dev:client dev:server",
    "dev:client": "cd client && npm start",
    "dev:server": "cd server && npm run start:dev",
    "build:all": "npm-run-all build:client build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "npm-run-all": "^4.1.5"
  },
  "lint-staged": {
    "client/**/*.{ts,tsx}": [
      "cd client && eslint --fix",
      "cd client && prettier --write"
    ],
    "server/**/*.{ts,tsx}": [
      "cd server && eslint --fix",
      "cd server && prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.26.1+sha512.664074abc367d2c9324fdc18037097ce0a8f126034160f709928e9e9f95d98714347044e5c3164d65bd5da6c59c6be362b107546292a8eecb7999196e5ce58fa"
}
