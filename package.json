{
  "name": "stylesync",
  "description": "Style Sync",
  "version": "0.0.0",
  "author": "Osvaldo Costa",
  "email": "osvaldo.costajr@gmail.com",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "pnpm --filter style-sync-client dev & pnpm --filter server start:dev",
    "dev:client": "pnpm --filter style-sync-client dev",
    "dev:server": "pnpm --filter style-sync-server start:dev",
    "build": "pnpm -r build",
    "build:client": "pnpm --filter style-sync-client build",
    "build:server": "pnpm --filter style-sync-server build",
    "lint": "pnpm -r lint:check",
    "lint:fix": "pnpm -r lint",
    "test": "pnpm -r test",
    "prepare": "husky",
    "commit": "cz",
    "commit:retry": "cz --retry"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5"
  },
  "lint-staged": {
    "client/**/*.{ts,tsx}": [
      "cd client && eslint --fix",
      "cd client && prettier --write"
    ],
    "server/**/*.{ts,tsx}": [
      "cd server && eslint --fix",
      "cd server && prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264"
}
