#!/usr/bin/env sh

# Skip if message already provided via -m
if [ -n "$2" ] && [ "$2" != "template" ]; then
  exit 0
fi

# Skip merges
case "$2" in
  merge|squash) exit 0 ;;
esac

echo "ðŸŽ¯ Starting interactive commit creation..."

# Change to server directory and run commitizen
cd server
exec < /dev/tty && npx cz --hook || true
